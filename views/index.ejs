<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Post</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% messages.forEach(message => { %>
        <tr>
          <td><%= message.user %></td>
          <td>
            <div><%= message.text %></div>
            <div>
              <a
                class="read-more-link"
                href="/posts?user=<%= message.user %>&text=<%= message.text %>&date=<%= message.added %>"
                >Read more...</a
              >
            </div>
          </td>
          <td><%= message.added.toLocaleDateString() %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <div>
      <a href="/new" class="return-home-link">Create new post</a>
    </div>
  </body>
</html>
